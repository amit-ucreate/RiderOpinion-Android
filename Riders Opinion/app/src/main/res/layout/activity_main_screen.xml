<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/llstartlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_riderlogo"/>

   <!--     <TextView
            android:id="@+id/tvTagRiders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/logo_small"
            android:text="Riders"
            android:textColor="@color/dark_brown"
            android:textSize="@dimen/register_rider_text_size" />

        <TextView
            android:id="@+id/tvTagOpinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="opinion"
            android:textColor="@color/light_brown"
            android:textSize="@dimen/register_rider_text_size" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lltextlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llstartlayout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_TagRiders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-12dp"
            android:text="Divided By Boundaries"
            android:layout_marginRight="30dp"
            android:textColor="@color/dark_brown"
            android:textSize="@dimen/date_text_size" />

        <TextView
            android:id="@+id/tv_TagOpinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="8dp"
            android:text="United By Throttles"
            android:textColor="@color/light_brown"
            android:textSize="@dimen/date_text_size" />
    </LinearLayout>

    <ImageView

        android:id="@+id/ivTakeaTour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lltextlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_live_drem_menu" />
  <!--  <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:src="@drawable/settings_icon" />-->

    <LinearLayout
        android:id="@+id/llCenterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/fmEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <com.nutsuser.ridersdomain.view.CircleButtonText
                android:id="@+id/tvEventCount"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_gravity="top|center_horizontal"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14dp"
                android:visibility="gone"
                app:cb_color="@color/light_brown"
                app:cb_pressedRingWidth="8dip" />
        <ImageView
            android:id="@+id/ivRidingEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_riding_events" />
        </FrameLayout>
        <ImageView
            android:id="@+id/ivModifyBike"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_modify_bike" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/llCenterLayout"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivRidingDestination"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/riding_destination" />

        <ImageView
            android:id="@+id/ivPlanRide"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_plan_ride" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/llCenterLayout"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivHealthyRides"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_healthy_riding" />

        <ImageView
            android:id="@+id/ivGetDirections"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/get_directions" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottom_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llBottomLayout"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivLiveDream"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_take_tour_menu" />
        <FrameLayout
            android:id="@+id/fmProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <com.nutsuser.ridersdomain.view.CircleButtonText
                android:id="@+id/tvProfileCount"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_gravity="right|bottom"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="14dp"
                android:layout_marginBottom="8dp"
                app:cb_color="@color/light_brown"
                app:cb_pressedRingWidth="8dip" />
        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/my_profile"
            />
    </FrameLayout>
    </LinearLayout>


