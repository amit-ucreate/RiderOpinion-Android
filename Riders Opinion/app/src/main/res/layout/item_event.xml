<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivStar"
        android:src="@drawable/icon_add_favorites"
        android:padding="12dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivMap"
        android:src="@drawable/icon_map"
        android:padding="12dp"
        android:layout_toLeftOf="@id/ivStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/tvTitle"
        android:text="3-Day Ride from Chandigarh To New Delhi(Stopover at Karnal)"
        android:maxLines="2"
        android:textColor="@color/dark_brown"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/ivMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/ivMap"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvPostImage"
            app:placeholderImage="@color/twenty_of_black"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:layout_width="0dip"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:drawableLeft="@drawable/icon_calendar"
                android:drawablePadding="8dp"
                android:text="15 september 2015"
                android:textColor="@color/dark_brown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_get_direction"
                android:drawablePadding="8dp"
                android:text="New Delhi"
                android:textColor="@color/dark_brown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_time"
                android:drawablePadding="8dp"
                android:text="05:00 PM"
                android:textColor="@color/dark_brown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:text="jfd nkjNAFS LKJ,amnfs cklJ,NSC zkxjcz niKHj  iafhk  whed kuHASBD iauhj sn KUHB lik  hkbak kajh  aujmhBF DUKJM cIHXKCBjm"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>


    </LinearLayout>
    



</RelativeLayout>
