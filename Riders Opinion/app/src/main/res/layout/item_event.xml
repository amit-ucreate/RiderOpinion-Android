<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="12dp"
    android:background="@color/white">


    <!--<ImageView
        android:id="@+id/ivStar"
        android:src="@drawable/icon_add_favorites"
        android:padding="12dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <ImageView
        android:id="@+id/ivMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:padding="12dp"
        android:src="@drawable/icon_map" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@id/ivMap"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="3-Day Ride from Chandigarh To New Delhi(Stopover at Karnal)"
        android:textColor="@color/dark_brown"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/ivMap"
        android:orientation="vertical">

        <!-- <com.facebook.drawee.view.SimpleDraweeView
             android:id="@+id/sdvPostImage"
             app:placeholderImage="@color/twenty_of_black"
             android:layout_width="0dip"
             android:layout_weight="1"
             android:padding="8dp"
             android:layout_height="match_parent" />-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            >

            <TextView
                android:id="@+id/tvdate"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/icon_calendar"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="15 september 2015"
                android:textColor="@color/dark_brown" />

            <TextView
                android:id="@+id/tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/icon_time"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="05:00 PM"
                android:textColor="@color/dark_brown" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
           >

            <TextView
                android:id="@+id/tvdesloc"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/icon_get_direction"

                android:gravity="center"
                android:text="New Delhi"
                android:singleLine="true"

                android:textColor="@color/dark_brown" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"

                android:gravity="center">

                <ImageView
                    android:id="@+id/ivPeopleIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/icon_profile_group" />

                <TextView
                    android:id="@+id/tvNumberOfRiders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/ivPeopleIcon"
                    android:gravity="center"
                    android:textColor="#C15413"
                    android:text="" />

                <TextView
                    android:id="@+id/tvLabelHaveJoined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/tvNumberOfRiders"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:text="have Joined" />

            </RelativeLayout>

        </FrameLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0ECE9">

    </View>

</RelativeLayout>
