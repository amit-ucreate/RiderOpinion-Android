<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            >


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_brown">


                <TextView
                    android:id="@+id/tvTitleToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TAKE A TOUR"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="16dp"
                    android:src="@drawable/icon_home" />

                <!--<TextView
                    android:id="@+id/tvTitleDONE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="TAKE A TOUR"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold" />-->
            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/tvwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="HOW IT WORKS?"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/llCenterLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:id="@+id/fmEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.nutsuser.ridersdomain.view.CircleButtonText
                        android:id="@+id/tvEventCount"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_gravity="top|center_horizontal"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:cb_color="@color/light_brown"
                        app:cb_pressedRingWidth="8dip" />

                    <ImageView
                        android:id="@+id/ivRidingEvents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icon_riding_events" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/ivModifyBike"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_modify_bike" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/llCenterLayout"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivRidingDestination"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/riding_destination" />

                <ImageView
                    android:id="@+id/ivPlanRide"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_plan_ride" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llCenterLayout"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivHealthyRides"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_healthy_riding" />

                <ImageView
                    android:id="@+id/ivGetDirections"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/get_directions" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBottom_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llBottomLayout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivLiveDream"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_take_tour_menu" />

                <FrameLayout
                    android:id="@+id/fmProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.nutsuser.ridersdomain.view.CircleButtonText
                        android:id="@+id/tvProfileCount"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_gravity="right|bottom"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:cb_color="@color/light_brown"
                        app:cb_pressedRingWidth="8dip" />

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/my_profile" />
                </FrameLayout>
            </LinearLayout>


            <!--
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#8555"
                android:layout_alignParentBottom="true"

                android:id="@+id/mainbanner">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BANNER 150 PX HEIGHT"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical|center"
                    android:textColor="@android:color/white"/>
            </FrameLayout>
            -->
        </RelativeLayout>
    <FrameLayout
        android:id="@+id/fmlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000">

        <TextView
            android:id="@+id/tvcontinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="90dp"
            android:text="CONTINUE TOUR"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/tvYes"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"

                android:text="YES"
                android:background="@color/light_brown"

                android:textColor="@android:color/white"
                android:textSize="30dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
            <Button
                android:id="@+id/tvNo"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"

                android:text="NO"
                android:background="@color/light_brown"

                android:textColor="@android:color/white"
                android:textSize="30dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>


    </FrameLayout>
</RelativeLayout>
