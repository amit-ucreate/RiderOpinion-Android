    <!-- Another Bottom View For Left to Right -->


    <LinearLayout
        android:id="@+id/bottom_wrapper1"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="0dp"
       >

        <ImageButton
            android:id="@+id/btnLocation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:visibility="gone"
            android:gravity="center"
             />
    </LinearLayout>


    <!-- Top View,  Row itemView of RecyclerView -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rllayout"
        android:layout_marginBottom="12dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/fmFrienflistItem"
            android:layout_height="80dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdvPostImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                app:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:id="@+id/txtNickName"
                    android:textColor="#CD411E"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:id="@+id/txtUsername"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.inscripts.custom.EmojiTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textColor="@color/gray_map_icon"
                    android:id="@+id/txtMessage"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:singleLine="true"
                android:textColor="@color/gray_map_icon"
                android:id="@+id/txtTime"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_gravity="right"
                android:textStyle="bold" />
            <com.nutsuser.ridersdomain.view.CircleButtonText
                android:id="@+id/tvchatCount"
                android:layout_width="50dip"
                android:layout_height="35dip"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:gravity="right"
                android:layout_marginTop="30dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cb_color="@color/light_brown"
                app:cb_pressedRingWidth="8dip" />
        </FrameLayout>

    </RelativeLayout>


</com.daimajia.swipe.SwipeLayout>

