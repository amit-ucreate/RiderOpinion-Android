<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_brown">


            <TextView
                android:id="@+id/tvTitleToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="PLAN A RIDE"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="16dp"
                android:src="@drawable/menu_icon" />


        </android.support.v7.widget.Toolbar>

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_weight="1">

            <!--<ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ScrollView>-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:id="@+id/mainSV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_rideTag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/icon_down_arrow"
                            android:padding="12dp"
                            android:imeOptions="actionNext"
                            android:textColor="@android:color/black"
                            android:hint="RIDE TYPE"
                            />

                        <View
                            android:id="@+id/v_TagStart"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/tv_rideTag"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/light_brown" />

                        <LinearLayout
                            android:id="@+id/ll_TagDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/v_TagStart"
                            android:focusableInTouchMode="true"
                            android:weightSum="2">

                            <FrameLayout
                                android:id="@+id/fmStartDate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center_vertical"
                                    android:layout_marginLeft="12dp"
                                    android:src="@drawable/icon_calendar" />

                                <TextView
                                    android:id="@+id/tv_StartTagDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_marginLeft="2dp"
                                    android:gravity="left"
                                    android:hint="11 Oct 2015/5:30-16:30"
                                    android:paddingBottom="12dp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="12dp"
                                    android:paddingStart="5sp"
                                    android:imeOptions="actionNext"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/fmEndDate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/icon_calendar" />

                                <TextView
                                    android:id="@+id/tv_EndTagDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_marginLeft="2dp"
                                    android:gravity="left"
                                    android:hint="11 Oct 2015/5:30-16:30"
                                    android:paddingBottom="12dp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="12dp"
                                    android:imeOptions="actionNext"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />
                            </FrameLayout>

                        </LinearLayout>


                        <View
                            android:id="@+id/v_TagView"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/ll_TagDate"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/light_brown" />

                        <RelativeLayout
                            android:id="@+id/rl_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/v_TagView"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="2dp">

                            <ImageView
                                android:id="@+id/ivMap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_map_big" />

                            <AutoCompleteTextView
                                android:id="@+id/tvPlace1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="12dp"
                                android:layout_toRightOf="@id/ivMap"
                                android:drawableRight="@drawable/icon_get_direction"
                                android:hint="Start Location"
                                android:imeOptions="actionNext"
                                android:focusableInTouchMode="true"
                                android:selectAllOnFocus="true"
                                android:singleLine="true">

                                <requestFocus />
                            </AutoCompleteTextView>

                            <AutoCompleteTextView
                                android:id="@+id/tvPlace2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvPlace1"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginTop="2dp"
                                android:layout_toRightOf="@id/ivMap"
                                android:drawableRight="@drawable/icon_get_direction"
                                android:hint="End Location"
                                android:imeOptions="actionDone"
                                android:focusableInTouchMode="true"
                                android:selectAllOnFocus="true"
                                android:singleLine="true">

                                <requestFocus />
                            </AutoCompleteTextView>


                        </RelativeLayout>

                        <View
                            android:id="@+id/v_afteradddress"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/rl_add"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/light_brown" />

                        <TextView
                            android:id="@+id/tv_route_haults"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/v_afteradddress"
                            android:padding="12dp"
                            android:text="ROUTE HALTS"
                            android:imeOptions="actionNext"
                            android:textColor="@color/light_brown" />

                        <RelativeLayout
                            android:id="@+id/rl_routehaults"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_route_haults"
                            android:focusableInTouchMode="true"
                            android:layout_marginLeft="12dp">

                            <ImageView
                                android:id="@+id/ivMap2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_map_big" />

                            <AutoCompleteTextView
                                android:id="@+id/edPlace3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="12dp"
                                android:layout_toRightOf="@id/ivMap2"
                                android:drawableRight="@drawable/icon_get_direction"
                                android:hint="Breakfast Halts"
                                android:imeOptions="actionDone"
                                android:focusableInTouchMode="true"
                                android:singleLine="true">

                                <requestFocus />
                            </AutoCompleteTextView>


                            <AutoCompleteTextView
                                android:id="@+id/edPlace4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/edPlace3"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginTop="2dp"
                                android:layout_toRightOf="@id/ivMap2"
                                android:drawableRight="@drawable/icon_get_direction"
                                android:hint="Tea Halt"
                                android:imeOptions="actionDone"
                                android:focusableInTouchMode="true"
                                android:singleLine="true">


                            </AutoCompleteTextView>


                        </RelativeLayout>

                        <View
                            android:id="@+id/v_tag_belowroutehaults"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/rl_routehaults"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/light_brown" />

                        <fragment
                            android:id="@+id/map"
                            class="com.google.android.gms.maps.MapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_below="@+id/v_tag_belowroutehaults"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1" />


                        <RelativeLayout
                            android:id="@+id/rl_pitstop"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@+id/map">

                            <FrameLayout
                                android:id="@+id/fmClick"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:alpha="1"
                                android:background="#80000000">

                                <TextView
                                    android:id="@+id/tvCLickHere"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|center_vertical"
                                    android:text="click here"
                                    android:textColor="@android:color/white" />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/tvEatables"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:drawablePadding="8dp"
                                android:drawableTop="@drawable/icon_eating_joints"
                                android:gravity="center"
                                android:padding="16dp"
                                android:text="0"
                                android:textColor="#1F1F1F" />

                            <TextView
                                android:id="@+id/tvPetrolPump"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/tvEatables"
                                android:layout_toRightOf="@id/tvEatables"
                                android:drawablePadding="8dp"
                                android:drawableTop="@drawable/icon_petrol_pump"
                                android:padding="16dp"
                                android:text="0"
                                android:textColor="#1F1F1F" />


                            <TextView
                                android:id="@+id/tvServiceCenter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/tvEatables"
                                android:layout_toRightOf="@id/tvPetrolPump"
                                android:drawablePadding="8dp"
                                android:drawableTop="@drawable/icon_mechanic"
                                android:padding="16dp"
                                android:text="0"
                                android:textColor="#1F1F1F" />

                            <TextView
                                android:id="@+id/tvFirstAid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/tvEatables"
                                android:layout_toRightOf="@id/tvServiceCenter"
                                android:drawablePadding="8dp"
                                android:drawableTop="@drawable/icon_firstaid"
                                android:padding="16dp"
                                android:text="0"
                                android:textColor="#1F1F1F" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvNext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_pitstop"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/light_brown"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="NEXT"
                            android:imeOptions="actionDone"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                        <ImageView
                            android:id="@+id/transparent_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:color/transparent" />
                    </FrameLayout>
                </ScrollView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lvSlidingMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="#8A3C16"
                android:clickable="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlProfile"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@color/dark_brown"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp">

                    <Button
                        android:id="@+id/btUpdateProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"

                        android:layout_marginTop="9dp"
                        android:background="@drawable/icon_menu_edit" />

                    <Button
                        android:id="@+id/btFullProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"

                        android:layout_marginTop="9dp"
                        android:background="@drawable/icon_menu_logout" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_alignParentTop="true"
                        android:gravity="top|center"

                        android:singleLine="true"
                        android:text="VISHAL SHAHI"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/title_text_size" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdvDp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_below="@+id/tvName"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="7dp"
                        app:placeholderImage="@color/white"
                        app:roundAsCircle="true" />


                    <!--  <TextView
                          android:id="@+id/tvAddress"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_alignLeft="@id/tvName"
                          android:layout_below="@id/tvName"
                          android:layout_toLeftOf="@id/sdvDp"
                          android:text="H.No.293, Sector 28, Chandigarh"
                          android:textColor="@android:color/white" />-->


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:orientation="vertical">


                    <GridView
                        android:id="@+id/gridView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/rlProfile"
                        android:horizontalSpacing="1dp"
                        android:numColumns="2"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="1dp">

                    </GridView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/white"></View>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#8A3C16">

                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>
