<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <LinearLayout
        android:layout_below="@id/ivMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvPostImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="7dp"

            android:layout_centerInParent="true"
            app:placeholderImage="@color/white"
            app:roundAsCircle="true"  />

        <LinearLayout

            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_marginLeft="5dp"
                android:text="SMART BIKERS"
                android:textColor="#CD411E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:drawablePadding="8dp"
                android:textStyle="bold"
                android:text="Vishal Shahi"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:textColor="#A9A9A9"
                android:text="What's the scence for tomorrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>




</RelativeLayout>
