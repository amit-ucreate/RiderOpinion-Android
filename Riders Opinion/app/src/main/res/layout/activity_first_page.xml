<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginRight="16dp"
        android:id="@+id/llCenterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTagRiders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/first_page_rider_text_size"
            android:layout_marginBottom="-12dp"
            android:textColor="@color/dark_brown"
            android:text="Riders" />

        <TextView
            android:id="@+id/tvTagOpinion"
            android:layout_marginTop="-8dp"
            android:textSize="@dimen/opinion_text_size"
            android:textColor="@color/light_brown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="opinion" />

    </LinearLayout>

    <ImageView
        android:layout_marginRight="@dimen/logo_margin_right"
        android:layout_alignParentRight="true"
        android:layout_above="@id/llCenterLayout"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivStart"
        android:layout_marginTop="16dp"
        android:layout_below="@id/llCenterLayout"
        android:layout_alignRight="@id/llCenterLayout"
        android:src="@drawable/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
